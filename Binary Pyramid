#include<stdio.h>
int main()
{
    int i=0,j=1,k=0,n,h=0;
    scanf("%d",&n);

    while(i<n)
    {
        i=i+j;
        k++;
        j++;

    }
    int m,l,o;
    for(m=k; m>0; m--)
    {
        for(l=0; l<m; l++)
        {
            printf(" ");
        }

        for(o=k; o>=m; o--)
        {
            if(h<n)if(h%2==0)  printf("0 ");
                else printf("1 ");
            h++;
        }
        printf("\n");
    }
    return 0;
}
